{
  "manifest_version": 3,
  "name": "TruthAI â€“ Fake News Detector",
  "version": "1.0.0",
  "description": "Check Facebook posts and any text for misinformation.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:8000/*", "https://your-api-domain/*"],
